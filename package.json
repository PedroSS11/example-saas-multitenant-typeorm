{
  "name": "multi-tenant-saas",
  "version": "0.1.0",
  "description": "A initial multi-tenant saas structure with ORM already configured (TypeORM)",
  "main": "index.ts",
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "build": "tsc",
    "start:prod": "tsc && node dist/src/index.js",
    "start:dev": "ts-node src/index.ts",
    "db:create:management": "tsc && node ./dist/database/typeorm/migrations_scripts/management/generate-management.js",
    "db:generate:management": "tsc && node ./dist/database/typeorm/migrations_scripts/management/migration-management.exec.js",
    "db:migrate:management": "tsc && node ./dist/database/typeorm/migrations_scripts/management/apply-migration-management.js",
    "db:generate": "tsc && node ./dist/database/typeorm/migrations_scripts/app/migration.exec.js",
    "db:migrate": "tsc && node ./dist/database/typeorm/migrations_scripts/app/apply-migration.js",
    "db:drop": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:drop -d ./database/typeorm/migration.datasource.ts"
  },
  "keywords": [
    "saas"
  ],
  "author": "Pedro Henrique Sim√£o Silva",
  "license": "ISC",
  "dependencies": {
    "@overnightjs/core": "^1.7.6",
    "body-parser": "^1.20.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jet-logger": "^1.3.1",
    "module-alias": "^2.2.2",
    "mysql2": "^3.11.0",
    "pg": "^8.12.0",
    "typeorm": "^0.3.20",
    "typescript": "^5.1.3",
    "winston": "^3.13.1",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/module-alias": "^2.0.1",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0"
  },
  "_moduleAliases": {
    "@src": "dist/src"
  }
}
