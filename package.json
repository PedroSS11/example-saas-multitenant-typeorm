{
  "name": "multi-tenant-saas",
  "version": "0.1.0",
  "description": "A initial multi-tenant saas structure with ORM already configured (TypeORM)",
  "main": "index.ts",
  "scripts": {
    "start": "tsc && node ./dist/index.js",
    "db:generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate database/typeorm/migrations/migration  -d ./database/typeorm/migration.datasource.ts",
    "db:migrate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d ./database/typeorm/migration.datasource.ts",
    "db:drop": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:drop -d ./database/typeorm/migration.datasource.ts"
  },
  "keywords": [
    "saas"
  ],
  "author": "Pedro Henrique Sim√£o Silva",
  "license": "ISC",
  "dependencies": {
    "@overnightjs/core": "^1.7.6",
    "body-parser": "^1.20.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jet-logger": "^1.3.1",
    "pg": "^8.12.0",
    "typeorm": "^0.3.20",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  }
}
